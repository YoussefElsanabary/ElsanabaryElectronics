<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/secondaryColor</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="btn_style">

        <item name="android:textColor">@color/mainColor</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:layout_marginRight">50sp</item>
        <item name="android:layout_marginLeft">50sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="btn2_style">
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:textColor">@color/mainColor</item>


    </style>


    <style name="page_style">
        <item name="background">@color/mainColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>